<?xml version="1.0" encoding="utf-8"?>
<form>
<fields name="attribs">
   <fieldset name="companyprofile" label="TPL_EXTRAFIELDS_COMPANYPROFILE_SLIDER_LABEL" group="extrafields">
      <field
            name="companyprofile_address1"
            type="text"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_ADDRESS1"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_ADDRESS1_DESC"
         />
         <field
            name="companyprofile_address2"
            type="text"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_ADDRESS2"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_ADDRESS2_DESC"
         />
         <field
            name="companyprofile_block"
            type="text"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_BLOCK"
            class="validate-numeric"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_BLOCK_DESC"
         />
         <field
            name="companyprofile_area"
            type="text"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_AREA"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_AREA_DESC"
         />
         <field
            name="companyprofile_pobox"
            type="text"
            class="validate-numeric"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_POBOX"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_POBOX_DESC"
         />
         <field
            name="companyprofile_tel"
            type="tel"
            class="validate-numeric"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_TEL"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_TEL_DESC"
         />
         <field
            name="companyprofile_website"
            type="URL"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_WEBSITE"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_WEBSITE_DESC"
         />



         <field
            name="companyprofile_logo"
            type="media"
            preview="tooltip"
            directory="company_logos"
            label="TPL_COMPANYPROFILE_LOGO"
            description="TPL_COMPANYPROFILE_LOGO_DESC"
         />

         <field 
            name="companyprofile_category"
            type="list"
            default="0"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_CATEGORY"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_CATEGORY_DESC"
         >
            <option value="0">Industrial</option>
            <option value="1">Retail</option>
         </field>

         <field 
            name="companyprofile_language"
            type="list"
            default="0"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_LANGUAGE"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_LANGUAGE_DESC"
         >
            <option value="0">English and Arabic</option>
            <option value="1">English Only</option>
            <option value="2">Arabic Only</option>
         </field>

         <field
            name="companyprofile_approval"
            type="list"
            default="0"
            label="TPL_EXTRAFIELDS_COMPANYPROFILE_APPROVAL"
            description="TPL_EXTRAFIELDS_COMPANYPROFILE_APPROVAL_DESC"
         >
            <option value="0">Pending</option>
            <option value="1">Approved</option>
         </field>         

      </fieldset>
   </fields>
</form>